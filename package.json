{
  "name": "challenge_thullo",
  "version": "1.0.0",
  "main": "src/app.ts",
  "license": "MIT",
  "scripts": {
    "dev": "cross-env NODE_ENV=development nodemon --watch './**/*.ts' --exec 'node --experimental-specifier-resolution=node --loader ts-node/esm' ./src/app.ts",
    "test": "cross-env NODE_ENV=test mocha -r ts-node/register --timeout 10000 ./src/tests/**/*.test.ts --exit",
    "mg": "cross-env NODE_ENV=development knex --knexfile src/db/knexfile.ts migrate:latest",
    "mg:rollback": "cross-env NODE_ENV=development knex --knexfile src/db/knexfile.ts migrate:rollback",
    "mg:prod": "cross-env NODE_ENV=production knex migrate:latest",
    "compile": "shx rm -rf dist/ && tsc",
    "heroku-postbuild": "yarn run compile",
    "build": "shx rm -rf dist/ && tsc",
    "start": "cross-env NODE_ENV=production node dist/app.js"
  },
  "dependencies": {
    "@hapi/joi": "^17.1.1",
    "@koa/cors": "^3.1.0",
    "@koa/router": "^9.4.0",
    "axios": "^0.21.0",
    "bcryptjs": "^2.4.3",
    "cross-env": "^7.0.2",
    "dotenv": "^8.2.0",
    "jsonwebtoken": "^8.5.1",
    "knex": "^1.0.7",
    "koa": "^2.13.0",
    "koa-bodyparser": "^4.3.0",
    "koa-morgan": "^1.0.1",
    "nanoid": "^3.1.18",
    "pg": "^8.8.0",
    "ts-node": "^10.9.1",
    "typescript": "^4.0.3"
  },
  "devDependencies": {
    "@types/bcryptjs": "^2.4.2",
    "@types/hapi__joi": "^17.1.6",
    "@types/jsonwebtoken": "^8.5.0",
    "@types/knex": "^0.16.1",
    "@types/koa": "^2.11.6",
    "@types/koa__cors": "^3.0.2",
    "@types/koa__router": "^8.0.3",
    "@types/koa-bodyparser": "^4.3.0",
    "@types/koa-morgan": "^1.0.4",
    "@types/mocha": "^8.0.3",
    "@types/node": "^18.11.12",
    "chai": "^4.2.0",
    "chai-http": "^4.3.0",
    "faker": "^5.1.0",
    "mocha": "^10.2.0",
    "nodemon": "^2.0.6",
    "shx": "^0.3.3"
  }
}
